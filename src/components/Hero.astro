---
import { Image } from "astro:assets";
import Desc from "./Desc.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { default: banned } = await import(`../assets/banned.webp`)

const isHome = Astro.url.pathname === `/${lang}/` || `/${lang}`;
---

<div class="relative overflow-hidden">
    <img 
        id="banner-image" 
        src="/index/index1.webp"
        alt="Banner" 
        loading="eager" 
        class=`${Astro.props.class} w-full object-cover transition-opacity duration-1000 ease-in-out`
        style="mask-image: linear-gradient(to bottom, black 40%, transparent);" 
        onload="this.parentElement.classList.add('animate-fade-up')"
    />
    <div class="absolute inset-0 bg-black opacity-65 pointer-events-none"></div>

    <div class="absolute inset-0 flex flex-col items-center justify-center text-center px-4 gap-4">
        <Image 
            src={banned} 
            alt="Banner" 
            class="max-w-[550px] w-full" 
            loading="eager" 
            onload="this.parentElement.classList.add('animate-fade-up')"
        />
        <section class="max-w-[500px]">
            <h2 class="text-[1.2rem] mb-2.5 text-[#ccc] font-medium">{t('hero.title')}</h2>
            {isHome && (
                <Desc>
                    {t('hero.desc')}
                    <a href={`/${lang}/about/`} class="text-white hover:text-[#ccc] transition-colors duration-300 ease"> {t('hero.descLink')}</a>
                </Desc>
            )}
        </section>
    </div>
</div>

<script>
    init();

    document.addEventListener('astro:after-swap', init);

    function init() {
        const images = [
            "/index/index1.webp",
            "/index/index2.webp",
            "/index/index3.webp",
        ];
        const bannerImage = document.getElementById('banner-image') as HTMLImageElement;
        let current = 0;

        function changeImage() {
            bannerImage.classList.remove('opacity-100');
            bannerImage.classList.add('opacity-0');

            setTimeout(() => {
                current = (current + 1) % images.length;
                bannerImage.src = images[current];
                bannerImage.classList.remove('opacity-0');
                bannerImage.classList.add('opacity-100');
            }, 1000);
        }

        bannerImage.addEventListener('load', () => {
            bannerImage.classList.add('opacity-100');
        });

        setInterval(changeImage, 5000);
    }
</script>

<style>
    .animate-fade-up {
        opacity: 1;
    }

    @keyframes fadeUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-up {
        animation: fadeUp 1s ease-out forwards;
    }
</style>